<div class="container">
  <h1>Menus</h1>
    <% @menus.each do |menu| %>
      <div class="row">

        <div class="col-md-6">
          <div class="col-sm-4">
            <%= menu.name %>
          </div>
          <div class="col-sm-8">
            <small><%= menu.description %></small>
          </div>
        </div>

        <div class="col-md-6">
          <div class="col-sm-3"></div>
          <div class="col-sm-3">
            <%= link_to 'Edit', edit_menu_path(menu), :class => 'btn btn-default' %>
          </div>
          <div class="col-sm-3">
            <%= link_to 'Show', menu, :class => 'btn btn-info' %>
          </div>
          <div class="col-sm-3">
            <%= link_to 'Delete', menu, method: :delete,  :class => 'btn btn-danger',
                        data: { confirm: 'This will PERMANANTLY DELETE this Menu. Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  <br>

  <%= link_to 'New Menu', new_menu_path, :class => 'btn btn-primary' %>
</div>
