      </button>
      <%= link_to store_name, root_path, :class => 'navbar-brand' %>
    </div>

    <div id='top_nav_body' class='collapse navbar-collapse'>
      <ul class='nav navbar-nav navbar-right'>
        <% if current_order? %>
          <li>
            <%= link_to 'Review Order', review_order_path(current_order), :remote => true %>
