        <% if super_user? %>
          <li classs="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Store Tools <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Menus', menus_path %></li>
