<div id="item_<%= item.id %>" class="row item">
  <div class="col-md-6">
    <h4>
      <%= link_to item.name, menu_section_item_path(menu, section, item) %>
      <small>
        <%= item.description %>
      </small>
    </h4>
  </div><!--col-->

  <div class="col-md-6">
    <div class="col-sm-2 col-sm-offset-1">
      <div class="form-group">
        <h4><%= number_to_currency(item.cost) %></h4>
      </div>
    </div><!--col-->


      <div class="col-sm-4 col-sm-offset-2">
        <%= render :partial => 'order_items/add_to_order_button', :locals => {:item => item, :ajax => true} %>
      </div>
  </div><!--col-->
</div><!--container-->

