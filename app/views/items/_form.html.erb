<div class="row">
  <%= form_for @form_target do |f| %>
    <%= render :partial => 'parts/error_explanation', :locals => {:object => @item} %>

    <div class="col-md-4">  
      <div class="form-group">
        <%= f.label :name, :class => 'control-label' %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description, :class => 'control-label' %>
        <%= f.text_area :description, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :cost, :class => 'control-label' %>
        <%= f.text_field :cost, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <label class="control-label">
            <%= f.check_box :tax_exempt %> Item is tax exempt
          </label>
        </div>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <label class="control-label">
            <%= f.check_box :dont_deliver %> Not available for delivery
          </label>
        </div>
      </div>

      <!--<div class="form-group">-->
        <!--<%= f.label :topping_list_id %>-->
        <!--<%= f.number_field :topping_list_id %>-->
      <!--</div>-->
      <div class="form-group">
        <%= f.submit :class => 'btn btn-primary form-control' %>
      </div>
    <% end %>
  </div><!--col-->
</div><!--row-->  